<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @* <title>@ViewData["Title"] - SUClient</title> *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SUClient.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SUClient</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ol class="navbar-nav flex-grow-1">
                    <button class="nav-link text-dark" id="loginpagebutton" onclick="GoToThatPage('LoginPage')">Log in</button>
                    <li class="nav-item">
                        <button class="nav-link text-dark" id="registerpagebutton" onclick="GoToThatPage('Register')">Sign Up</button>
                    </li>
                    
                    </ol>
                    <div class="userPanel">
                        <div class="dropdown">
                            Welcome, <span id="userloginname"></span>!
                            <div class="dropdown-content">
                                <p id="userNotif" class="userNotif" onclick="GoToMyProfile()">Profile</p>
                                <p id="userActions" class="userActions" onclick="GoToThatPage('ChangePassword')">ChangePassword</p>
                                <p id="userAccount" class="userAccount" onclick="logout()">Logout</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="sidenav">
        <br />
        <a onclick="GoToThatPage('')">Questions</a>
        <br />
        <a onclick="GoToThatPage('Tags')">Tags</a>
        <br />
        <a>Users</a>
        <br />
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            @* &copy; 2023 - SUClient - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/app.js" asp-append-version="true"></script>
    <script src="~/js/ask.js" asp-append-version="true"></script>
    <script src="~/js/user.js" asp-append-version="true"></script>
    <script src="~/js/loadingactions.js" asp-append-version="true"></script>
    <script src="~/js/tags.js" asp-append-version="true"></script>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>

    document.addEventListener("DOMContentLoaded", function () {
        AuthUserKindaAutomatically();
        var userName = localStorage.getItem('userName');

        if (userName) {
            // Set the text content of the element with the ID "userloginname"
            document.getElementById('userloginname').textContent = userName;
        }
    });
</script>
